generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root@localhost:3306/rallysphere"
}

model wrc_drivers {
  id        Int     @id @default(autoincrement())
  firstName String? @db.Text
  lastName  String? @db.Text
  country   String? @db.Text
  team      String? @db.Text
  points    Int?
}

model wrc_codrivers {
  id        Int     @id @default(autoincrement())
  firstName String? @db.Text
  lastName  String? @db.Text
  country   String? @db.Text
  team      String? @db.Text
  points    Int?
}

model wrc_rallies {
  id        Int       @id @default(autoincrement())
  name      String?   @db.Text
  season    Int?
  country   String?   @db.Text
  beginning DateTime? @db.Date
  end       DateTime? @db.Date
}

model wrc_teams {
  id            Int     @id @default(autoincrement())
  name          String? @db.Text
  basedIn       String? @db.Text
  establishment Int?
  principal     String? @db.Text
  category      String? @db.Text
  brand         String? @db.Text
  points        Int?
}

model news {
  id              Int       @id @default(autoincrement())
  title           String?   @db.Text
  paragraph1      String?   @db.Text
  paragraph2      String?   @db.Text
  paragraph3      String?   @db.Text
  photo           String?   @db.Text
  publicationDate DateTime? @db.DateTime(0)
}
